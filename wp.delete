#!/bin/bash

# --- WordPress Site Deletion Script for Herd ---
# This script safely removes WordPress sites created with wp.new
# It removes the site directory, database, and Herd configuration
#
# Date: July 31, 2025

echo "ğŸ—‘ï¸ --- WordPress Site Deletion for Herd --- ğŸ—‘ï¸"
echo "This script will help you safely remove a WordPress site."
echo "âš ï¸ WARNING: This action is irreversible!"
echo "----------------------------------------------------"

# Function to show usage
show_usage() {
    echo "ğŸ—‘ï¸ --- WordPress Site Deletion for Herd --- ğŸ—‘ï¸"
    echo "This script safely removes WordPress sites and databases."
    echo "âš ï¸ WARNING: This action is irreversible!"
    echo "----------------------------------------------------"
    echo ""
    echo "Usage: $0 [--dry-run]"
    echo ""
    echo "Options:"
    echo "  --dry-run       - Show what would be deleted without removing anything"
    echo ""
    echo "This interactive script will:"
    echo "  â€¢ Validate the WordPress installation"
    echo "  â€¢ Remove the site directory"
    echo "  â€¢ Drop main and test databases"
    echo "  â€¢ Remove HTTPS certificates"
    echo ""
    echo "Safety features:"
    echo "  ğŸ” Validates WordPress installation before deletion"
    echo "  âš ï¸ Requires explicit 'DELETE' confirmation"
    echo "  ğŸ“Š Shows what will be deleted before proceeding"
    echo "  ğŸ§¹ Complete cleanup of all related files"
}

# --- Function to check if a command exists ---
command_exists () {
  type "$1" &> /dev/null ;
}

# --- 1. Check for WP-CLI and Herd ---
echo "ğŸ” Checking for WP-CLI..."
if ! command_exists wp ; then
  echo "âŒ Error: WP-CLI is not found. Please install WP-CLI (https://wp-cli.org/) and ensure it's in your system's PATH."
  exit 1
fi
echo "âœ… WP-CLI found."

echo "ğŸ” Checking for Herd..."
if ! command_exists herd ; then
  echo "âŒ Error: Herd is not found. Please install Herd (https://herd.laravel.com/) and ensure it's in your system's PATH."
  exit 1
fi
echo "âœ… Herd found."

# --- 2. Get site name to delete ---
read -p "ğŸŒ Enter the WordPress site name to delete: " SITE_NAME
if [ -z "$SITE_NAME" ]; then
    echo "âŒ Site name cannot be empty. Exiting."
    exit 1
fi

# Set site path
SITE_PATH="$HOME/Herd/$SITE_NAME"

# --- 3. Verify site exists ---
if [ ! -d "$SITE_PATH" ]; then
    echo "âŒ Error: Site directory $SITE_PATH does not exist."
    exit 1
fi

# Check if it's a WordPress site
if [ ! -f "$SITE_PATH/wp-config.php" ]; then
    echo "âŒ Error: $SITE_PATH does not appear to be a WordPress site (no wp-config.php found)."
    exit 1
fi

echo "ğŸ“‚ Found WordPress site at: $SITE_PATH"

# --- 4. Get database information from wp-config.php ---
echo "ğŸ” Reading database configuration..."
DB_NAME=$(php -d memory_limit=-1 $(which wp) config get DB_NAME --path="$SITE_PATH" 2>/dev/null)
DB_USER=$(php -d memory_limit=-1 $(which wp) config get DB_USER --path="$SITE_PATH" 2>/dev/null)
DB_HOST=$(php -d memory_limit=-1 $(which wp) config get DB_HOST --path="$SITE_PATH" 2>/dev/null)

if [ -n "$DB_NAME" ]; then
    echo "âœ… Found database: $DB_NAME"
else
    echo "âš ï¸ Warning: Could not read database configuration"
fi

# --- 5. Final confirmation ---
echo ""
echo "âš ï¸ DANGER ZONE âš ï¸"
echo "This will permanently delete:"
echo "  - Site directory: $SITE_PATH"
if [ -n "$DB_NAME" ]; then
    echo "  - Database: $DB_NAME"
fi
echo "  - Herd HTTPS certificate for $SITE_NAME.test"
echo ""

# Check for dry-run flag
DRY_RUN="false"
if [ $# -eq 1 ] && [ "$1" = "--dry-run" ]; then
    DRY_RUN="true"
    echo "ğŸ” --- DRY RUN MODE ENABLED --- ğŸ”"
    echo "This is a preview - no actual changes will be made."
    echo ""
elif [ $# -gt 0 ]; then
    echo "âŒ Error: Invalid option '$1'. Use --dry-run or omit."
    show_usage
    exit 1
fi

if [ "$DRY_RUN" = "true" ]; then
    echo "ğŸ” [DRY RUN] This is what would be deleted."
    echo "ğŸ” [DRY RUN] No actual deletion would occur."
else
    read -p "Are you absolutely sure you want to delete this site? Type 'DELETE' to confirm: " CONFIRM
    
    if [ "$CONFIRM" != "DELETE" ]; then
        echo "âŒ Deletion cancelled. Site remains intact."
        exit 0
    fi
fi

# --- 6. Remove Herd HTTPS certificate ---
if [ "$DRY_RUN" = "true" ]; then
    echo "ğŸ” [DRY RUN] Would remove HTTPS certificate..."
else
    echo "ğŸ”“ Removing HTTPS certificate..."
    herd unsecure "$SITE_NAME" 2>/dev/null
    if [ $? -eq 0 ]; then
        echo "âœ… HTTPS certificate removed"
    else
        echo "âš ï¸ Warning: Could not remove HTTPS certificate (may not exist)"
    fi
fi

# --- 7. Drop database ---
if [ -n "$DB_NAME" ]; then
    if [ "$DRY_RUN" = "true" ]; then
        echo "ğŸ” [DRY RUN] Would drop database '$DB_NAME'"
        # Also show test database action in dry run
        TEST_DB_NAME="${DB_NAME}_test"
        echo "ğŸ” [DRY RUN] Would check and drop test database '$TEST_DB_NAME' if it exists"
    else
        echo "ğŸ—„ï¸ Dropping database '$DB_NAME'..."
        php -d memory_limit=-1 $(which wp) db drop --yes --path="$SITE_PATH" 2>/dev/null
        if [ $? -eq 0 ]; then
            echo "âœ… Database '$DB_NAME' dropped successfully"
        else
            echo "âš ï¸ Warning: Could not drop database '$DB_NAME'"
        fi
        
        # Also drop test database if it exists
        TEST_DB_NAME="${DB_NAME}_test"
        echo "ğŸ—„ï¸ Checking for test database '$TEST_DB_NAME'..."
        # Check if test database exists by trying to connect
        php -d memory_limit=-1 $(which wp) db query "USE $TEST_DB_NAME;" --path="$SITE_PATH" 2>/dev/null
        if [ $? -eq 0 ]; then
            echo "ğŸ—„ï¸ Dropping test database '$TEST_DB_NAME'..."
            mysql -h"$DB_HOST" -u"$DB_USER" -p"$DB_PASSWORD" -e "DROP DATABASE IF EXISTS $TEST_DB_NAME;" 2>/dev/null
            if [ $? -eq 0 ]; then
                echo "âœ… Test database '$TEST_DB_NAME' dropped successfully"
            else
                echo "âš ï¸ Warning: Could not drop test database '$TEST_DB_NAME'"
            fi
        else
            echo "â„¹ï¸ Test database '$TEST_DB_NAME' does not exist"
        fi
    fi
fi

# --- 8. Remove site directory ---
if [ "$DRY_RUN" = "true" ]; then
    echo "ğŸ” [DRY RUN] Would remove site directory: $SITE_PATH"
else
    echo "ğŸ“‚ Removing site directory..."
    rm -rf "$SITE_PATH"
    if [ $? -eq 0 ]; then
        echo "âœ… Site directory removed successfully"
    else
        echo "âŒ Error: Failed to remove site directory"
        exit 1
    fi
fi

if [ "$DRY_RUN" = "true" ]; then
    echo ""
    echo "ğŸ” [DRY RUN] Preview completed!"
    echo "ğŸ’¡ Run without --dry-run to actually delete the site."
else
    echo ""
    echo "ğŸ‰ --- Deletion Complete! --- ğŸ‰"
    echo "WordPress site '$SITE_NAME' has been completely removed."
    echo ""
    echo "ğŸ§¹ All clean!"
fi
